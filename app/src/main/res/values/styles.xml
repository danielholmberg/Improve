<resources>

    <!-- Default application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- a darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- color for the back-button and other controls -->
        <item name="colorControlNormal">@color/controlColor</item>
        <!-- color for the background of the activity -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- [Base] Toolbar label text style -->
    <style name="AppTheme.Base.ActivityTitle" parent="AppTheme.Base">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Base.FlatToolbar" parent="AppTheme.Base">
        <item name="elevation">0dp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!-- [Base] Application Title text style -->
    <style name="AppTitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Activity WindowTransitions -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
