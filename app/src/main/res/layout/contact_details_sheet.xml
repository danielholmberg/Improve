<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">

    <include
        android:id="@+id/include_toolbar_contact_details"
        layout="@layout/app_bar_contact_details"/>

    <android.support.v7.widget.CardView
        android:id="@+id/contact_details_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/contact_details_padding">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/contact_details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/contact_details_padding">

            <TextView
                android:id="@+id/contact_details_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Name"
                android:drawableStart="@drawable/ic_contact_person_grey"
                android:drawablePadding="@dimen/contact_form_icons_padding"
                android:textSize="@dimen/contact_details_text_size"
                android:paddingBottom="@dimen/contact_details_vertical_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/contact_details_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/contact_details_name_tv"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/call_contact_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_details_action_call"
                    android:textSize="@dimen/contact_details_actions_text_size"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_contact_mobile_active"
                    android:layout_margin="@dimen/contact_details_action_margin"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/mail_contact_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_details_action_email"
                    android:textSize="@dimen/contact_details_actions_text_size"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_contact_email_active"
                    android:layout_margin="@dimen/contact_details_action_margin"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <TextView
                android:id="@+id/contact_details_email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:drawableStart="@drawable/ic_contact_email_grey"
                android:drawablePadding="@dimen/contact_form_icons_padding"
                android:textSize="@dimen/contact_details_text_size"
                android:paddingBottom="@dimen/contact_details_vertical_padding"
                app:layout_constraintTop_toBottomOf="@id/contact_details_actions"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/contact_details_company_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add company"
                android:drawableStart="@drawable/ic_contact_company_grey"
                android:drawablePadding="@dimen/contact_form_icons_padding"
                android:textSize="@dimen/contact_details_text_size"
                android:paddingBottom="@dimen/contact_details_vertical_padding"
                app:layout_constraintTop_toBottomOf="@id/contact_details_email_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/contact_details_mobile_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add mobile"
                android:drawableStart="@drawable/ic_contact_mobile_grey"
                android:drawablePadding="@dimen/contact_form_icons_padding"
                android:textSize="@dimen/contact_details_text_size"
                app:layout_constraintTop_toBottomOf="@id/contact_details_company_tv"
                app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.widget.LinearLayout>