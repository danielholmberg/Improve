<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_omm_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardBackground"
    android:fitsSystemWindows="true"
    tools:context="dev.danielholmberg.improve.Activities.AddOnMyMindActivity">

    <include
        android:id="@+id/include_toolbar_add_omm"
        layout="@layout/app_bar_add_omm" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar_add_omm">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:backgroundTint="@color/editTextTint"
            android:drawableStart="@drawable/ic_omm_title_grey"
            android:drawablePadding="@dimen/omm_form_icons_padding"
            android:hint="@string/hint_title" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_layout_title">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:backgroundTint="@color/editTextTint"
            android:drawableStart="@drawable/ic_omm_info_grey"
            android:drawablePadding="@dimen/omm_form_icons_padding"
            android:isScrollContainer="true"
            android:scrollbars="vertical"
            android:hint="@string/hint_info"/>
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>