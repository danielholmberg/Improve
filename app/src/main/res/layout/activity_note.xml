<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/note_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardInfoBackground">

        <include
            android:id="@+id/include_toolbar_note_activity"
            layout="@layout/app_bar_note_activity"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <RelativeLayout
            android:id="@+id/note_activity_body_container"
            android:padding="@dimen/note_details_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_toolbar_note_activity">

            <include
                android:id="@+id/note_details_timestamp"
                layout="@layout/footer_item_note"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <include
                android:id="@+id/include_marker"
                layout="@layout/item_marker"
                android:layout_width="32dp"
                android:layout_height="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <ViewSwitcher
                android:id="@+id/view_switcher_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/note_title_padding"
                android:layout_alignParentStart="true"
                android:layout_below="@id/note_details_timestamp">

                <TextView
                    android:id="@+id/note_activity_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/note_title_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/note_form_padding">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="textCapWords"
                        android:backgroundTint="@color/editTextTint"
                        android:hint="@string/hint_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                </android.support.design.widget.TextInputLayout>

            </ViewSwitcher>

            <ViewSwitcher
                android:id="@+id/view_switcher_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/view_switcher_title">

                <TextView
                    android:id="@+id/note_activity_info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/note_info_padding"
                    android:isScrollContainer="true"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/note_details_info_text_size" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:backgroundTint="@color/editTextTint"
                        android:isScrollContainer="true"
                        android:scrollbars="vertical"
                        android:hint="@string/hint_info"/>
                </android.support.design.widget.TextInputLayout>

            </ViewSwitcher>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>