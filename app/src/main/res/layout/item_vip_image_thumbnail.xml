<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vip_image_item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:background="@drawable/background_vip_image_thumbnail"
    android:padding="@dimen/vip_image_border_width"
    android:layout_marginStart="@dimen/vip_image_margin"
    android:layout_marginEnd="@dimen/vip_image_margin"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/vip_image_progressBar"
        android:visibility="gone"
        android:padding="@dimen/vip_image_border_width"
        android:layout_width="@dimen/vip_image_view_thumbnail_size"
        android:layout_height="@dimen/vip_image_view_thumbnail_size"/>

    <ImageView
        android:id="@+id/vip_image_view_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>