<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_note_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardBackground"
    android:fitsSystemWindows="true"
    tools:context="dev.danielholmberg.improve.Activities.AddNoteActivity">

    <include
        android:id="@+id/include_toolbar_add_omm"
        layout="@layout/app_bar_add_note" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/omm_form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/note_form_padding"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/note_form_padding">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:backgroundTint="@color/editTextTint"
                    android:drawableStart="@drawable/ic_omm_title_grey"
                    android:drawablePadding="@dimen/note_form_icons_padding"
                    android:hint="@string/hint_title" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:backgroundTint="@color/editTextTint"
                    android:drawableStart="@drawable/ic_omm_info_grey"
                    android:drawablePadding="@dimen/note_form_icons_padding"
                    android:isScrollContainer="true"
                    android:scrollbars="vertical"
                    android:hint="@string/hint_info"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>