<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/note_details_padding">

    <TextView
        android:id="@+id/note_info_added_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="@dimen/textsize_note_info_timestamp"
        android:text="@string/note_info_dialog_added"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/note_info_added_timestamp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:textSize="@dimen/textsize_note_info_timestamp"
        android:layout_toEndOf="@id/note_info_added_placeholder"
        android:layout_alignBaseline="@id/note_info_added_placeholder"/>

    <TextView
        android:id="@+id/note_info_updated_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="@dimen/textsize_note_info_timestamp"
        android:text="@string/note_info_dialog_updated"
        android:textStyle="bold"
        android:layout_below="@id/note_info_added_placeholder"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/note_info_updated_timestamp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:textSize="@dimen/textsize_note_info_timestamp"
        android:layout_toEndOf="@id/note_info_updated_placeholder"
        android:layout_alignBaseline="@id/note_info_updated_placeholder"/>

</RelativeLayout>